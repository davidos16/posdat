<% if @widget.active %>



    <style> 
.widget-alert {
    position: absolute;
    top: 2.5%;
    left: 5%;
    border-radius: 5px;
    box-sizing: border-box;
    color: white;
    font-size: 1.25rem;
    margin: 0 auto;
    margin-bottom: 1em;
    padding: .5em;
    width: 100%;
    max-width: 85%;
    box-shadow: 2px 8px 4px -6px rgba(0, 0, 0, 0.3);
    z-index: 9999;
}

.widget-alert.alert-success {
  background-color: #2ecc71;
}

.widget-alert.alert-warning {
  background-color: #e67e22;
}

.widget-alert.alert-danger {
  background-color: #e74c34;
}

.widget-alert  button:focus {
  outline: 0;
}

.widget-alert  .close {
  position: absolute;
  top: 50%;
  right: 1%;
  transform: translateY(-50%);
  background-color: transparent;
  border: none;
  font-size: 2em;
  color: #cccccc;
  cursor: pointer;
}
.widget-alert .close:hover {
  color: inherit;
}

.widget-alert .btn {
  border-radius: 5px;
  border: solid 1px #000000;
  box-sizing: border-box;
  cursor: pointer;
  font-size: 1.15em;
  text-align: center;
  margin: 0 auto;
  margin-bottom: 1em;
  padding: 1em;
  width: 40%;
}

.widget-alert .reset {
  background-color: transparent;
  border: solid 3px #cccccc;
  color: #cccccc;
  transition: background-color 0.5s linear 0.1s;
}
.widget-alert .reset:hover {
  background-color: #cccccc;
  color: white;
}


.widget-alert span {
    display: inline-block;
    vertical-align: middle;
    width: auto;
    max-width: 80%;
    text-align: left;
    padding: .25em;
    font-size: 1.15rem;
    float: left;
}

.widget-alert  .btn-gradient {
    text-decoration: none;
    color: white;
    padding: 10px 30px;
    display: inline-block;
    position: relative;
    border: 1px solid rgba(0,0,0,0.21);
    margin: 5px;
    border-radius: 4px;
    text-shadow: 0 1px 0 rgba(0,0,0,0.15);
    float: right;
    margin-right: 55px;
}

.widget-alert  .btn-gradient:hover {
    font-weight: 700;
    }

.widget-alert  .btn-gradient.mini {
  padding: 4px 12px;  
  font-size: 12px;
  text-decoration: none;
}

.widget-alert  .btn-gradient .red {
    background: linear-gradient(rgba(250,90,90,1) 0%, rgba(232,81,81,1) 100%); 
}

.widget-alert  .btn-gradient .green {
    background: linear-gradient(to bottom, rgba(130,200,160,1) 0%, rgba(124, 185, 149, 1) 100%);
}


.btn.block, 
.btn-two.block, 
.btn-gradient.block, 
.btn-effect.block {
  display: block;
  width: 60%;
  margin-left: auto;
  margin-right: auto;
  text-align: center;
}
    </style>

    
<div id="widget-banner-<%= @widget.id %>" class="widget-alert <% if @widget.widget_type == "Top Banner Alert" %> alert-danger <% else %>  alert-success  <% end %>">
  <span> <%= @widget.message %> </span>
  
  
      <% if @widget.button.present? %> 
      
       <a href="<%= @widget.button %>" target="_blank" class="btn-gradient  <% if @widget.widget_type == "Top Banner Alert" %> red <% else %>  green <% end %> mini">Learn more </a>
      <% end %>
  
  <button id="dismiss-button-widget-<%= @widget.id %>" class="close">&times;</button>
  
  
</div>
    
        
    <script>
    
    document.getElementById("dismiss-button-widget-<%= @widget.id %>").addEventListener("click", function() {
       var bannerWidget = document.getElementById('widget-banner-<%= @widget.id %>');
        bannerWidget.remove(); 
    });
    </script>

  <% end %>                                           